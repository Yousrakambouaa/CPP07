NAME        = ex02
CXX         = c++
CXXFLAGS    = -Wall -Wextra -Werror -std=c++98
SRC         = main.cpp
OBJ         = $(SRC:.cpp=.o)
HEADER      = Array.hpp

all: $(NAME)

$(NAME): $(OBJ) $(HEADER)
	$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp $(HEADER)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re